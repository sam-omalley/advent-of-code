{
    "name": "Rust + Z3",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "stable"
        },
        "ghcr.io/devcontainers-extra/features/apt-packages:1": {
            "packages": "z3,libz3-dev,clang,libclang-dev,pkg-config"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "fill-labs.dependi",
                "editorconfig.editorconfig"
            ]
        }
    },
    "postCreateCommand": "cargo install aoc-cli --version 0.12.0 && z3 --version && cargo --version",
    "mounts": [
        "source=${env:HOME}/.adventofcode.session,target=/home/vscode/.adventofcode.session,type=bind,readonly"
    ]
}